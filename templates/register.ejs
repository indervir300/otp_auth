    <script>
        // Secret key for AES encryption (this is just for example; use a secure key in production)
        const aesKey = CryptoJS.lib.WordArray.random(16).toString(); // Generate a random AES key

        console.log('AES Key: ', aesKey);

        // Example RSA public key (should be managed securely)
        const rsaPublicKey = `-----BEGIN PUBLIC KEY-----
